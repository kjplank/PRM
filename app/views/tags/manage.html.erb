<% if @tracker.errors.any? %>
  <% @tracker.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Manage <%= @relationship.first_name %> <%= @relationship.last_name %>'s Tags</h3>
      </div>
      <div class="panel-body">
        <form action="/add_tag/<%= @relationship.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for tag_name -->
          <div class="form-group">
            <div class="col-sm-12">
              <div class="col-sm-10">
               <%= select_tag(:tag_id, options_from_collection_for_select(Tag.all, :id, :tag_name), :class => "form-control") %>
               <div class="col-sm-offset-12 col-sm-10">
                <button class="btn btn-success">
                  Add Tag
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
    <ul class="list-group">
      <% @relationship.tags.each do |tag| %>
      <li class="list-group-item">
        <%= tag.tag_name %>
        <a href="/delete_tag/<%= @tag.id %>" class="btn btn-danger" rel="nofollow">
          <i class="fa fa-trash-o"></i>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</div>

<!-- End responsive panel example -->
