<!-- Validation failure messages -->

<% if @relationship.errors.any? %>
<% @relationship.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Relationship: <%= @relationship.first_name %> <%= @relationship.last_name %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_relationship/<%= @relationship.id %>" method="post" class="form-horizontal">
          <%=render "form"%>
        </form>
      </div>
    </div>
  </div>


  <!-- End responsive panel example -->
