<!-- Validation failure messages -->

<% if @note.errors.any? %>
  <% @note.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Note</h3>
      </div>

<!-- params[:relationship_id]  -->

      <div class="panel-body">
        <form action="/update_note/<%= @note.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for content -->
          <div class="form-group">
            <label for="content" class="col-sm-2 control-label">
              What happened?
            </label>
            <div class="col-sm-10">
              <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @note.content %></textarea>
            </div>
          </div>

          <!-- Label and input for context -->
          <div class="form-group">
            <label for="context" class="col-sm-2 control-label">
              Where?
            </label>
            <div class="col-sm-10">
              <textarea id="context" name="context" placeholder="Context" class="form-control" rows="3"><%= @note.context %></textarea>
            </div>
          </div>

          <!-- Label and input for occurence -->
          <div class="form-group">
            <label for="occurence" class="col-sm-2 control-label">
              Date of Occurence
            </label>
            <div class="col-sm-10">
              <input type="date" id="occurence" name="occurence" placeholder="Occurence" class="form-control" value="<%= @note.occurence %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Edit Note
              </button>
              or
              <a href="/notes">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

