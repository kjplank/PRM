<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Note #<%= @note.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Content</dt>
              <dd><%= @note.content %></dd>

              <dt>Context</dt>
              <dd><%= @note.context %></dd>

              <dt>Occurence</dt>
              <dd><%= @note.occurence %></dd>

              <dt>Entry made</dt>
              <dd><%= @note.entry_made %></dd>

              <dt>Relationship</dt>
              <dd><%= @note.relationship_id %></dd>

              <dt>User</dt>
              <dd><%= @note.user_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/notes" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/notes/<%= @note.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_note/<%= @note.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
